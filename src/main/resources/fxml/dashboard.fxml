<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox spacing="20.0" style="-fx-background-color: linear-gradient(to bottom, #33ccff 0%, #ff99cc 100%);"
      xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.DashboardController">

    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <children>
        <Label text="Bun venit la biblioteca ta virtuală!">
            <font><Font size="20.0"/></font>
        </Label>

        <!-- Search Section -->
        <VBox spacing="10.0" alignment="CENTER">
            <TextField fx:id="searchField" promptText="Caută cărți pe Google Books..."
                       prefWidth="300.0" onAction="#handleSearch"/>
            <Button fx:id="searchButton" text="Căutare" onAction="#handleSearch"
                    prefHeight="30.0" prefWidth="100.0"/>
        </VBox>

        <!-- Navigation Buttons -->
        <HBox spacing="15.0" alignment="CENTER">
            <Button fx:id="categoriesButton" text="Categories" onAction="#handleCategories"
                    prefHeight="40.0" prefWidth="120.0"/>
            <Button fx:id="myButtonFav" text="Favorite" onAction="#handleFavorites"
                    prefHeight="40.0" prefWidth="120.0"/>
            <Button fx:id="myButtonLibrary" text="My Books" onAction="#handleMyBooks"
                    prefHeight="40.0" prefWidth="120.0"/>
        </HBox>

        <!-- Results Section -->
        <VBox fx:id="resultsSection" spacing="10.0" visible="false">
            <Label fx:id="resultsLabel" text="" style="-fx-text-fill: white; -fx-font-weight: bold;"/>

            <ScrollPane fitToWidth="true" prefHeight="400.0" style="-fx-background: transparent;">
                <content>
                    <FlowPane fx:id="booksContainer" hgap="15.0" vgap="15.0" alignment="CENTER"
                              style="-fx-background-color: rgba(255,255,255,0.1); -fx-padding: 15; -fx-background-radius: 10;"/>
                </content>
            </ScrollPane>
        </VBox>
    </children>
</VBox>