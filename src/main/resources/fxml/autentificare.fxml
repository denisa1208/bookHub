<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="0"
      stylesheets="@../styles.css"
      styleClass="main-background"
      xmlns="http://javafx.com/javafx/24.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.AutentificareController">

   <children>
      <!-- Top spacer -->
      <Region VBox.vgrow="ALWAYS" />

      <!-- Login container with glass effect -->
      <VBox alignment="CENTER" spacing="25" styleClass="glass-container"
            maxWidth="400" minWidth="320">

         <!-- Header section -->
         <VBox alignment="CENTER" spacing="10">
            <Label text="🔐" style="-fx-font-size: 42px;">
            </Label>
            <Label text="Bine ai revenit!" styleClass="hero-title">
               <font><Font size="26.0"/></font>
            </Label>
            <Label text="Conectează-te pentru a accesa biblioteca ta" styleClass="subtitle-text">
               <font><Font size="14.0"/></font>
            </Label>
         </VBox>

         <!-- Login form -->
         <VBox spacing="20" alignment="CENTER" maxWidth="300">
            <!-- Username field -->
            <VBox spacing="8">
               <Label text="Nume utilizator" styleClass="form-label">
                  <font><Font size="14.0"/></font>
               </Label>
               <TextField fx:id="usernameField" promptText="Introduceți numele de utilizator"
                          styleClass="modern-textfield" minHeight="48" onAction="#focusPasswordField" />
            </VBox>

            <!-- Password field -->
            <VBox spacing="8">
               <Label text="Parola" styleClass="form-label">
                  <font><Font size="14.0"/></font>
               </Label>
               <PasswordField fx:id="passwordField" promptText="Introduceți parola"
                              styleClass="modern-textfield" minHeight="48" onAction="#focusAuthField"/>
            </VBox>
         </VBox>

         <!-- Buttons container -->
         <HBox spacing="15" alignment="CENTER">
            <Button fx:id="loginButton" text="Autentificare"
                    styleClass="login-button" minHeight="52" prefWidth="140"
                    onAction="#handleLogin">
               <font><Font size="16.0"/></font>
            </Button>

            <Button fx:id="backButton" text="Înapoi"
                    styleClass="secondary-button" minHeight="52" prefWidth="100"
                    onAction="#handleBackButtonAction">
               <font><Font size="14.0"/></font>
            </Button>
         </HBox>

         <padding>
            <Insets bottom="30.0" left="30.0" right="30.0" top="30.0"/>
         </padding>
      </VBox>

      <!-- Bottom spacer -->
      <Region VBox.vgrow="ALWAYS" />
   </children>

   <padding>
      <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
   </padding>
</VBox>