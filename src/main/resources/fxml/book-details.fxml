<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<ScrollPane fitToWidth="true" style="-fx-background-color: linear-gradient(to bottom, #33ccff 0%, #ff99cc 100%);"
            xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.BookDetailsController">

    <content>
        <VBox spacing="20.0" style="-fx-padding: 30;">

            <!-- Header -->
            <HBox alignment="CENTER_LEFT">
                <Button fx:id="backBtn" text="← Înapoi" onAction="#handleBack"
                        style="-fx-background-color: rgba(255,255,255,0.3); -fx-text-fill: white; -fx-background-radius: 8;"/>
            </HBox>

            <!-- Main content card -->
            <VBox spacing="20.0" style="-fx-background-color: rgba(255,255,255,0.95); -fx-background-radius: 15; -fx-padding: 30;">

                <!-- Book Title -->
                <Label fx:id="titleLabel" text="Titlu Carte" wrapText="true">
                    <font><Font name="System Bold" size="24.0"/></font>
                </Label>

                <!-- Book Info -->
                <VBox spacing="10.0">
                    <Label fx:id="authorsLabel" text="Autor: ">
                        <font><Font size="16.0"/></font>
                    </Label>

                    <Label fx:id="publisherLabel" text="Editura: ">
                        <font><Font size="14.0"/></font>
                    </Label>

                    <HBox spacing="20.0">
                        <Label fx:id="pagesLabel" text="Pagini: ">
                            <font><Font size="14.0"/></font>
                        </Label>

                        <Label fx:id="ratingLabel" text="Rating: ">
                            <font><Font size="14.0"/></font>
                        </Label>
                    </HBox>
                </VBox>

                <!-- Separator -->
                <Separator/>

                <!-- Description -->
                <VBox spacing="10.0">
                    <Label text="Descriere:" style="-fx-font-weight: bold;">
                        <font><Font size="16.0"/></font>
                    </Label>

                    <Label fx:id="descriptionLabel" text="Descrierea cărții..." wrapText="true">
                        <font><Font size="14.0"/></font>
                    </Label>
                </VBox>

                <!-- Action Buttons -->
                <HBox spacing="15.0" alignment="CENTER">
                    <Button fx:id="addToLibraryBtn" text="Adaugă în bibliotecă" onAction="#handleAddToLibrary"
                            prefWidth="200.0" prefHeight="45.0"
                            style="-fx-background-color: #007bff; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14;">
                    </Button>

                    <Button fx:id="addToFavoritesBtn" text="Adaugă la favorite" onAction="#handleAddToFavorites"
                            prefWidth="200.0" prefHeight="45.0"
                            style="-fx-background-color: #dc3545; -fx-text-fill: white; -fx-background-radius: 8; -fx-font-size: 14;">
                    </Button>
                </HBox>

            </VBox>
        </VBox>
    </content>
</ScrollPane>